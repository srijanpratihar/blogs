<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/style.css" />


    <title>Update Post</title>
</head>

<body>
    <%-include('./partials/navbar.ejs') %>
        <div class="form-container">
            <!-- icon -->
            <h1>
                Update Post

                <!-- add icon -->
                <i class="fas fa-plus"></i>
            </h1>
            <% if(error) {%>

                <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
                <%}%>
                    <form action="/api/v1/posts/<%=post._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <!-- Post Title -->
                        <div class="input-wrapper">
                            <label for="name">Post Title</label>
                            <input type="text" name="title" id="name" required value="<%=post.title%>" />
                            <!-- err -->
                        </div>

                        <!-- Category -->
                        <div class="input-wrapper">
                            <label for="category">Category</label>
                            <select name="category" id="category" value="<%=post.category%>">
            <option value="react js">React JS</option>
            <option value="html">HTML</option>
            <option value="css">CSS</option>
            <option value="node js">Node JS</option>
            <option value="javascript">JAVASCRIPT</option>
            <option value="other">OTHERS</option>
          </select>
                            <!-- err -->
                        </div>
                        <div class="input-wrapper">
                            <!-- Post Body -->
                            <label for="body">Post Body</label>
                            <textarea name="description" id="body" cols="30" rows="10" required>
<%=post.description%>
</textarea>
                            <!-- err -->
                        </div>
                        <!-- Post Image -->
                        <div class="input-wrapper">
                            <label for="image">Post Image</label>
                            <input type="file" name="file" id="image" required/>
                            <!-- err -->
                        </div>

                        <button type="submit">Update Post</button>
                    </form>
        </div>
        <%-include('./partials/footer.ejs') %>

</body>

</html>