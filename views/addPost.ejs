<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/style.css" />


    <title>Add Post</title>
</head>

<body>
    <%-include('./partials/navbar.ejs') %>
        <div class="form-container">
            <!-- icon -->
            <h1>
                Add Post

                <!-- add icon -->
                <i class="fas fa-plus"></i>
            </h1>
            <small class="error">
      </small>
            <form action="/api/v1/users/posts" method="POST" enctype="multipart/form-data">
                <!-- Post Title -->
                <div class="input-wrapper">
                    <label for="name">Post Title</label>
                    <input type="text" name="title" id="name" required />
                    <!-- err -->
                </div>

                <!-- Category -->
                <div class="input-wrapper">
                    <label for="category">Category</label>
                    <select name="category" id="category">
            <option value="React JS">React JS</option>
            <option value="HTML">HTML</option>
            <option value="CSS">CSS</option>
            <option value="NODE JS">Node JS</option>
            <option value="JAVASCRIPT">JAVASCRIPT</option>
            <option value="OTHERS">OTHERS</option>
          </select>
                    <!-- err -->
                </div>
                <div class="input-wrapper">
                    <!-- Post Body -->
                    <label for="body">Post Body</label>
                    <textarea name="description" id="body" cols="30" rows="10" required></textarea>
                    <!-- err -->
                </div>
                <!-- Post Image -->
                <div class="input-wrapper">
                    <label for="image">Post Image</label>
                    <input type="file" name="file" id="image" required />
                    <!-- err -->
                </div>

                <button type="submit">Create</button>
            </form>
        </div>
        <%-include('./partials/footer.ejs') %>

</body>

</html>