<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/42a182743f.js" crossorigin="anonymous"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/style.css" />

    <title>Update User</title>
</head>

<body>
    <%-include('./partials/navbar.ejs')%>
        <div class="form-container">
            <!-- icon -->
            <h1>
                Update User Form
                <i class="fas fa-user-plus"></i>
            </h1>
            <%if(error){%>

                <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>

                <%}%>
                    <form action="/api/v1/users/update?_method=PUT" method="POST">
                        <!-- full name -->
                        <label for="name">Full Name</label>
                        <input required type="text" name="fullname" required id="fullname" value=<%=user.fullname%> />
                        <!-- email -->
                        <label for="email">Email</label>
                        <input required type="email" name="email" required id="email" value=<%=user.email%> />

                        <label for="role">Role</label>
                        <input type="text" name="role" required value=<%=user.role%> />

                        <label for="about">About Me</label>
                        <textarea type="text" name="about" required><%=user.about%> </textarea>

                        <button type="submit">Update User</button>


                    </form>
        </div>
        <%-include('./partials/footer.ejs')%>

</body>

</html>